@import "bootstrap";
@import "bootstrap-responsive";
@import "mixins";
@import "data_mixins";
@import "bootstrap_select_box";
@import "jquery.reject";
@import "jquery.smartbanner";

/* colors */
$teal: #76b3a2;
$lightTeal: #4e8079;



/* Bootstrap overrides */

.popover {
  color: black;
  text-align: left;
  .popover-title, .popover-content p span {
    font-size: 16px;
    color: #65b2c5;
    font-family: Georgia, sans-serif;
    font-style: italic;
    font-weight: 700;
  }
}

#sort-select {
  position: relative;
  display: inline-block;
  width: 100%;
  .bootstrap-select {
    position: absolute;
    left: 50%;
    margin-left: -75px;
    &.open {
      .dropdown-toggle {
        background-color: #6b837a;
      }
    }
    button {
      height: 25px;
      outline: none;
      border: none;
      &:focus {
        outline: none!important;
      }
      &:hover {
        background-color: #6b837a;
      }
    }
    .filter-option {
      top: 2px;
      font-size: 12px;
      border-right: 1px solid black;
      box-shadow: 1px 0px 0px 0px gray;
    }
    .caret {
      right: 9px;
      &.down {
        border-top: 4px solid black;
        // &:after {
        //   content:"\a0";
        //   display:block;
        //   padding:2px 2px;
        //   line-height:1px;
        //   border-top:1px solid $white;
        // }
      }
      &.up {
        border-top: none;
        border-bottom: 4px solid black;
        top: -2px;
      }
    }
    .dropdown-menu {
      background-color: #515252;
      li {
        > a {
          color: gray;
          background-color: #515252;
          font-size: 12px;
          &:hover {
            color: $white;
            background-color: #6b837a;
            background-image: none;
          }
        }
      }
    }
  }
}


/* General styles */
* { -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }
h2 {
  line-height: 30px;
}

html { height: 90%; } /* prevents the whole doc from scrolling when not needed */

body {
  background: #212221;
  color: $white;
  padding: 0;
  height: 100%;
  zoom: 1;
}

iframe {
  margin: 0 auto;
  display: block;
  height: 100%;
  width: 100%;
}

body >.wrapper {
  background: url(<%= asset_path 'login_bg.jpg' %>) #212221 no-repeat top center;
  padding-left: 20px;
  padding-right: 20px;
  margin-top: 50px;
  height: 100%;
  .book {
    width: 100%;
    height: 100%;
    position: relative;
    margin-left: 0;
    overflow: auto;
    iframe {
      border: none;
      background: url(<%= asset_path 'page_bg.png' %>);
    }
  }
}

.main_nav {
  margin-bottom: 10px;
  background: url(<%= asset_path 'top_bg.png' %>) #212221 repeat-x;
}
.navbar {
  margin-bottom: 0;
  .navbar-inner {
    background: url(<%= asset_path 'top_bg.png' %>) repeat-x;
    background-image: none;
    border: none;
    margin: 0 auto;
    position: relative;
    height: 60px;
    filter: none;
    #logo {
      position: absolute;
      display: inline-block;
      top: -2px;
      left: 50%;
      margin-left: -30px;
      width: 60px;
      height: 60px;
      background: url(<%= asset_path 'db_icon_beta.png' %>);
      a {
        display: block;
        height: 100%;
        width: 100%;
      }
    }
    .store-link {
      float: right;
      position: relative;
      top: 4px;
      a {
        display: block;
        height: 50px;
        width: 50px;
        background-repeat: no-repeat;
        background-size: 50px 50px;
        @include store-icon();
        &:hover {
          @include store-icon-hover();
        }
      }
    }
    .popover {
      width: 400px;
      .popover-content {
        max-height: 400px;
        padding-bottom: 20px;
        overflow: scroll;
      }
      .popover-title {
        background-color: white;
        border-bottom: none;
        .close {
          position: relative;
          display: block;
          top: -5px;
          left: -5px;
          width: 25px;
          height: 25px;
          float: none;
          @include close-icon();
          &:hover {
            @include close-icon-hover();
          }
        }
      }
      #beta-badge {
        display: inline-block;
        position: absolute;
        top: -3px;
        right: -3px;
      }
    }
    .container > button {
      position: relative;
      float: left;
      display: block;
      width: 40px;
      height: 40px;
      top: 5px;
      left: 30px;
      background-size: 100%;
      @include main-menu-icon();
      &:hover, &:active {
        @include main-menu-icon-hover();
        background-position: initial;
      }
    }
  }
  .container {
    margin-top: 0;
    text-align: center;
  }
  .nav-collapse {
    float: left;
    height: auto !important;
    margin-left: 20px;
    &.show {
      overflow: visible!important;
      .nav {
        max-height: 999px!important;
        margin: 0 10px 20px 0;
        z-index: 3;
        overflow: visible!important;
      }
    }
    .nav {
      top: 20px;
      padding: 5px;
      background-color: transparent;
      max-height: 0 !important;
      -webkit-transition: 500ms;
      -moz-transition: 500ms;
      -o-transition: 500ms;
      transition: 500ms;
      li {
        a {
          padding-left: 50px;
          font-size: 20px;
          letter-spacing: 1px;
          background-repeat: no-repeat;
          background-position: left;
          background-size: 60px;

          &.sort-link {
            @include sort-icon();
            &:hover {
              @include sort-icon-hover();
            }
          }
          &.library-link {
            @include library-icon();
            &:hover, &.active {
              @include library-icon-hover();
            }
          }
          &.search-link {
            @include search-icon();
            &:hover {
              @include search-icon-hover();
            }
          }
          &.search-link {
            @include search-icon();
            &:hover {
              @include search-icon-hover();
            }
          }
          &.sync-link {
            @include sync-icon();
            &:hover {
              @include sync-icon-hover();
            }
          }
          &.log-out-link {
            @include log-out-icon();
            &:hover {
              @include log-out-icon-hover();
            }
          }
        }
      }
    }
  }
}

