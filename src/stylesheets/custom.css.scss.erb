body {
  #search-pane  {
    overflow: hidden;
    -webkit-transform: translate3d(0, 0, 0);
    -moz-transform: translate3d(0, 0, 0);
    -ms-transform: translate3d(0, 0, 0);
    -o-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
    -webkit-transition: -webkit-transform 500ms ease;
    -moz-transition: -moz-transform 500ms ease;
    -o-transition: -o-transform 500ms ease;
    transition: transform 500ms ease;
  }
  &.nav_open {
    #search-pane {
      z-index: 3;
    }
  }
}

body.nav_open {
  #search-pane {
    -webkit-transform: translate3d(325px, 0, 0) scale3d(1, 1, 1);
    -moz-transform: translate3d(325px, 0, 0) scale3d(1, 1, 1);
    -ms-transform: translate3d(325px, 0, 0) scale3d(1, 1, 1);
    -o-transform: translate3d(325px, 0, 0) scale3d(1, 1, 1);
    transform: translate3d(325px, 0, 0) scale3d(1, 1, 1);
    @include breakpoint(phone) {
    -webkit-transform: translate3d(110%, 0, 0) scale3d(1, 1, 1);
    -moz-transform: translate3d(110%, 0, 0) scale3d(1, 1, 1);
    -ms-transform: translate3d(110%, 0, 0) scale3d(1, 1, 1);
    -o-transform: translate3d(110%, 0, 0) scale3d(1, 1, 1);
    transform: translate3d(110%, 0, 0) scale3d(1, 1, 1);
    }
  }
}

