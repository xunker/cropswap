#search-pane {
  position: absolute;
  top: 0;
  left: -327px;
  bottom:0px;
  width: 325px;
  max-height: 100%;
  overflow: hidden;
  color: whitesmoke;
  border-left: 2px solid darkgrey;
  -moz-box-shadow:    5px 5px 5px rgb(32, 31, 34);
  -webkit-box-shadow: 5px 5px 5px rgb(32, 31, 34);
  box-shadow:         5px 5px 5px rgb(32, 31, 34);
  z-index: 3;
  @include breakpoint(phone) {
    width: 100%;
    height: 420px;
    max-height: none;
    left: -110%;
  }
  #search-wrap {
    height: 100%;
    padding-top: 10px;
    background: -moz-linear-gradient(top, #222222, #2e2e2e);
    background: -webkit-gradient(linear, 0 0, 0 100%, from(#222222), to(#2e2e2e));
    background: -webkit-linear-gradient(top, #222222, #2e2e2e);
    background: -o-linear-gradient(top, #222222, #2e2e2e);
    background: linear-gradient(to bottom, #222222, #2e2e2e);
    background-repeat: repeat-x;
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#222222', endColorstr='#2e2e2e', GradientType=0);
    .control-group {
      margin-top: 10px;
      text-align: center;
    }
    #terms {
      width:70%;
      min-height: 10px;
    }
    .add-on {
      background-color: $teal;
      background-image: -moz-linear-gradient(top, $lightTeal, $teal);
      background-image: -webkit-gradient(linear, 0 0, 0 100%, from($lightTeal), to($teal));
      background-image: -webkit-linear-gradient(top, $lightTeal, $teal);
      background-image: -o-linear-gradient(top, $lightTeal, $teal);
      background-image: linear-gradient(to bottom, $lightTeal, $teal);
      background-repeat: repeat-x;
      filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#{$lightTeal}", endColorstr="#{$teal}", GradientType=0);
      border-color: $teal $teal #1f6377;
      border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) fadein(rgba(0, 0, 0, 0.1), 15%);
      *background-color: $teal;
    }
    #terms, .add-on {
      -moz-box-sizing: content-box;
      -webkit-box-sizing: content-box;
      box-sizing: content-box;
    }
  }
  .search-header {
    margin-top:0px;
    margin-left:0px;
    width:100%;
    height: 34px;
    text-align: center;
    h3 {
      margin: 0;
      line-height: 24px;
    }
    .close-search-pane-link {
      width:60px;
      height:29px;
      float: left;
      padding: 4px 0 0 5px;
      margin-left: 5px;
      background: url('/assets/back_button.svg') no-repeat center;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      color: #0a2e26;
      &:hover, &:active {
        color: white;
        text-decoration: none;
      }
    }
  }

  .search-form-container {
    padding-bottom: 1px;
    -webkit-box-shadow: 0 4px 4px -2px #000000;
       -moz-box-shadow: 0 4px 4px -2px #000000;
            box-shadow: 0 4px 4px -2px #000000;
    p {
      margin-left:10px;
    }
    form {
      margin: 5px 5px;
    }
    .radio {
      margin-left: 9px;
    }
    button[type=submit] {
      width: 35px;
    }
  }
  .search-results {
    height: 0;
    margin: 0;
    padding: 0;
    list-style: none;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
    overflow-x: hidden;
    -moz-appearance: scrollbartrack-vertical;
    &.success {
      height: 100%;
    }
    &.loading {
      height: auto;
      text-align: center;
      margin-top: 10px;
      >div {
        text-align: center;
        margin-top: 10px;
      }
    }
    .result {
      padding: 10px;
      min-height: 25px;
      background: #FFFFFF;
      color:#000000;
      border: 1px solid rgba(0, 0, 0, 0.27);
      &.active {
        color: #0a2e26;
        text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
        background-color: #326c63;
        background-image: -moz-linear-gradient(top, $lightTeal, $teal);
        background-image: -webkit-gradient(linear, 0 0, 0 100%, from($lightTeal), to($teal));
        background-image: -webkit-linear-gradient(top, $lightTeal, $teal);
        background-image: -o-linear-gradient(top, $lightTeal, $teal);
        background-image: linear-gradient(to bottom, $lightTeal, $teal);
        background-repeat: repeat-x;
        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#FF5BC0DE', endColorstr='#FF2F96B4', GradientType=0);
        border-color: $teal $teal #1f6377;
        border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) fadein(rgba(0, 0, 0, 0.1), 15%);
        *background-color: $teal;
        /* Darken IE7 buttons by default so they stand out more given they won't have borders */
        filter: progid:DXImageTransform.Microsoft.gradient(enabled = false);
      }
      &.last-child {
        margin-bottom: 150px;
      }
      em {
        font-variant: none;
        font-weight: bold;
      }
      a {
        display: block;
        margin: -10px;
        padding: 10px 32px 10px 10px;
        color: black;
        text-decoration: none;
        background-image: url("data:image/png;base64,");
        background-position: right center;
        background-repeat: no-repeat;
        -webkit-background-size: 19px 13px;
        background-size: 19px 13px;
        .book-title {
          width:100%;
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
          font-weight: bold;
          font-size: 120%;
        }
        .book-author {
          width:100%;
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
          color: grey;
        }
      }
      .context {
        padding:5px;
      }
    }
    .book-result {
      padding-top:2px;
      padding-bottom:2px;
    }
  }
  .back-link {
    padding: 10px;
    min-height: 25px;
    background: #FFFFFF;
    color:#000000;
    border: 1px solid rgba(0, 0, 0, 0.27);
    a {
      display: block;
      margin: -11px;
      padding: 2px 0px 0px 20px;
      color: black;
      text-decoration: none;
      background-image: url("data:image/png;base64,");
      background-position: left center;
      background-repeat: no-repeat;
      -webkit-background-size: 19px 13px;
      background-size: 19px 13px;
    }
  }

}

